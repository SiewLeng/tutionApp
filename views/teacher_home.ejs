<!DOCTYPE html>
<html>
<head>
	<% include partials/head %>
</head>
<body>
	<div class='container'>
		<% include partials/menu %>
		<h3> Teacher Homepage</h3>
		</br>
		<form action='/teachers/create' method="POST">
			<h4> Add A Teacher: </h4>
			<input type='text' name='name' placeholder='name'>
			<input type= 'text' name='age' placeholder='age'>
			<input type= 'text' name='subject' placeholder='subject'>
			<input type= 'submit' value='submit' class='btn-md btn-info'>
		</form>
		</br>
		<h4> List Of Teachers </h4>
		<table class="table table-striped">
  		<thead>
    		<tr>
      		<th scope="col">#</th>
      		<th scope="col">Name</th>
      		<th scope="col">Age</th>
      		<th scope="col">Subject</th>
      		<th scope="col"></th>
      		<th scope="col"></th>
    		</tr>
  		</thead>
  		<tbody>
  			<% for(let i = 0; i < listOfTeacher.length; i++) { %>
  				<% let url1 = `/teachers/find/${listOfTeacher[i].id}`; %>
  				<% let url2 = `/teachers/delete/${listOfTeacher[i].id}`; %>
  				<tr>
      			<th scope="row"><%=(i+1)%></th>
      			<td><%=listOfTeacher[i].name %></td>
      			<td><%=listOfTeacher[i].age %></td>
      			<td><%=listOfTeacher[i].subject %></td>
      			<td><a href=<%=url1%> class="btn btn-info" role="button">Edit</a></td>
      			<td><a href=<%=url2%> class="btn btn-info" role="button">Delete</a></td>
    			</tr>
  			<% } %>
    	</tbody>
    </table>
	</div>
</body>
<% include partials/script %>
</html>