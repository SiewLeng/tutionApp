<!DOCTYPE html>
<html>
<head>
	<% include partials/head %>
</head>
<body>
	<div class="container">
		<% include partials/menu %>
		<h3> Details of Class </h3>
 		</br>
 		<% let url = `/classes/update/${theClass.id}?_method=PUT`; %>
 		<form action=<%=url%> method="POST">
  		<input type="hidden" name="_method" value="PUT">
  		<div class="form-row">
    		<div class="form-group col-md-3">
    			<label> <%="Name: " + theClass.name%> </label>
      		<input type="text" class="form-control" name="name" placeholder="name">
    		</div>
    		<div class="form-group col-md-6">
    			<label> <%="Name of Tutor: " + teacher.name + ", Tutor's Subject: " + teacher.subject%> </label>
    			<select class="browser-default custom-select" name='teacherId' style="height: 33px">
  					<option selected> Select a teacher </option>
  						<% for (let i = 0; i < listOfTeacher.length; i++) { %>
  							<% let value = listOfTeacher[i].id; %>
  							<% let option = `name: ${listOfTeacher[i].name}, subject: ${listOfTeacher[i].subject}`; %>
  							<option value=<%= value%>> <%= option%> </option>
  						<% } %>
					</select>
    		</div>
  		</div>
  		</br>
  		<button type="submit" class="btn btn-info">Update</button>
		</form>
	</div>
</body>
<% include partials/script %>
</html>