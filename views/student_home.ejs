<!DOCTYPE html>
<html>
<head>
	<% include partials/head %>
</head>
<body>
	<div class='container'>
		<% include partials/menu %>
		<h3> Student Homepage</h3>
		<form action='/students/create' method="POST">
			<label> Add A Student: </label> </br>
			<input type='text' name='name' placeholder='name of student'>
			<input type='text' name='age' placeholder='age of student'>
			<input type= 'submit' value='submit' class='btn-md btn-info'>
		</form></br>
		<h4> List Of Students </h4>
		<table class="table table-striped">
  		<thead>
    		<tr>
      		<th scope="col">#</th>
      		<th scope="col">Name</th>
      		<th scope="col">Age</th>
      		<th scope="col"></th>
      		<th scope="col"></th>
    		</tr>
  		</thead>
  		<tbody>
  			<% for(let i = 0; i < listOfStudent.length; i++) { %>
  				<% let url1 = `/students/find/${listOfStudent[i].id}`; %>
  				<% let url2 = `/students/delete/${listOfStudent[i].id}`; %>
  				<tr>
      			<th scope="row"><%=(i+1)%></th>
      			<td><%=listOfStudent[i].name %></td>
      			<td><%=listOfStudent[i].age %></td>
      			<td><a href=<%=url1%> class="btn btn-info" role="button">Edit</a></td>
      			<td><a href=<%=url2%> class="btn btn-info" role="button">Delete</a></td>
    			</tr>
  			<% } %>
    	</tbody>
    </table>
		</div>
</body>
<% include partials/script %>
</html>